{
  "name": "spending-monitor",
  "version": "0.1.0",
  "description": "AI-powered alerts for credit card transactions",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "pnpm install && pnpm -r --if-present install:deps",
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:backend": "pnpm backend:setup && pnpm backend:start",
    "backend:setup": "pnpm db:start && sleep 3 && pnpm db:upgrade && pnpm db:seed",
    "backend:start": "ENVIRONMENT=development BYPASS_AUTH=true API_PORT=8002 pnpm --filter @*/api dev",
    "backend:stop": "pnpm db:stop",
    "db:start": "pnpm --filter @*/db run db:start",
    "db:stop": "pnpm --filter @*/db run db:stop",
    "db:upgrade": "pnpm --filter @*/db run upgrade",
    "db:revision": "pnpm --filter @*/db run revision",
    "db:seed": "pnpm --filter @*/db seed",
    "db:verify": "pnpm --filter @*/db verify",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "test": "turbo test",
    "type-check": "turbo type-check",
    "storybook": "turbo storybook",
    "build-storybook": "turbo build-storybook",
    "status": "scripts/status-check.sh",
    "prepare": "husky install",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.4.0",
    "husky": "^9.1.6",
    "lint-staged": "^16.1.5",
    "semantic-release": "^24.2.7",
    "turbo": "^2.5.6"
  },
  "lint-staged": {
    "packages/ui/**/*.{js,jsx,ts,tsx,css,md,html,json}": [
      "cd packages/ui && pnpm prettier --write --",
      "cd packages/ui && pnpm eslint --max-warnings 0 --"
    ],
    "packages/api/**/*.py": [
      "cd packages/api && uv run ruff format -- --respect-gitignore",
      "cd packages/api && uv run ruff check --"
    ]
  },
  "packageManager": "pnpm@9.0.0"
}
